<div id="<%= dom_id quote %>" class="flex flex-col h-full bg-gradient-to-br from-purple-800/60 to-purple-900/60 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 border border-purple-700/40 hover:border-purple-500/60 hover:scale-105 hover:-translate-y-2 backdrop-blur-sm group">
  <!-- Card Content -->
  <div class="flex-1 p-6 flex flex-col">
    <!-- Category Badge -->
    <div class="mb-4">
      <span class="inline-block bg-gradient-to-r from-purple-600 to-pink-600 text-white text-xs font-bold px-3 py-1.5 rounded-full">
        üìÇ <%= quote.category %>
      </span>
    </div>

    <!-- Quote Text -->
    <div class="flex-1 mb-4">
      <div class="text-base leading-relaxed font-semibold italic text-purple-100 line-clamp-4 mb-3">
        "<%= quote.text %>"
      </div>
      <p class="text-sm text-gray-400 flex items-center gap-2">
        <span>‚úçÔ∏è</span>
        <span class="font-medium"><%= quote.author %></span>
      </p>
    </div>
  </div>

  <!-- Divider -->
  <div class="border-t border-purple-600/30 mx-6"></div>

  <!-- Action Buttons -->
  <div class="p-6 space-y-3">
    <div class="flex gap-2">
      <%= link_to 'View', quote_path(quote), class: 'flex-1 text-center px-3 py-2.5 bg-blue-600 hover:bg-blue-700 rounded-lg text-sm font-semibold transition duration-200 transform hover:scale-105 active:scale-95' %>
      <%= link_to 'Edit', edit_quote_path(quote), class: 'flex-1 text-center px-3 py-2.5 bg-amber-600 hover:bg-amber-700 rounded-lg text-sm font-semibold transition duration-200 transform hover:scale-105 active:scale-95' %>
    </div>
    <div>
      <%= button_to 'Delete', quote_path(quote), method: :delete, form: { class: 'contents' }, class: 'w-full text-center px-3 py-2.5 bg-red-600 hover:bg-red-700 rounded-lg text-sm font-semibold transition duration-200 transform hover:scale-105 active:scale-95 cursor-pointer border-0', onclick: "return confirm('Are you sure you want to delete this quote?');" %>
    </div>
  </div>
</div>
