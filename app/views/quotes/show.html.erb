<% content_for :title, "Quote" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to 'â† Back to All Quotes', quotes_path, class: 'inline-flex items-center gap-2 text-purple-300 hover:text-purple-100 transition font-semibold' %>
  </div>

  <!-- Metadata Section -->
  <div class="mb-6 grid grid-cols-2 gap-4 p-4 bg-purple-700/20 rounded-xl border border-purple-600/30">
    <div>
      <p class="text-gray-400 text-sm font-semibold">QUOTE ID</p>
      <p class="text-lg font-mono text-purple-300"><%= @quote.id %></p>
    </div>
    <div>
      <p class="text-gray-400 text-sm font-semibold">CREATED</p>
      <p class="text-lg text-purple-300"><%= @quote.created_at.strftime('%b %d, %Y') %></p>
    </div>
    <div>
      <p class="text-gray-400 text-sm font-semibold">UPDATED</p>
      <p class="text-lg text-purple-300"><%= @quote.updated_at.strftime('%b %d, %Y') %></p>
    </div>
    <div>
      <p class="text-gray-400 text-sm font-semibold">CATEGORY</p>
      <p class="text-lg text-purple-300"><%= @quote.category %></p>
    </div>
  </div>

  <!-- Quote Content Section -->
  <div class="grid md:grid-cols-3 gap-6 mb-6">
    <!-- Text and Author Column (2/3 width) -->
    <div class="md:col-span-2">
      <div class="quote-show-content p-6 bg-gradient-to-br from-purple-800/60 to-purple-900/60 rounded-2xl border border-purple-700/40 shadow-xl">
        <%= render 'quote_content', quote: @quote %>
      </div>
    </div>

    <!-- Image Column (1/3 width) -->
    <div>
      <% if @quote.image.present? %>
        <div class="rounded-2xl overflow-hidden border-2 border-purple-700/40 shadow-xl">
          <%= image_tag @quote.image, alt: "Quote image", class: "w-full h-full object-cover" %>
        </div>
      <% else %>
        <div class="w-full h-64 bg-gradient-to-br from-purple-700/30 to-purple-900/30 rounded-2xl border-2 border-dashed border-purple-600/50 flex items-center justify-center">
          <p class="text-gray-400 text-center">No image attached</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex gap-3 justify-center">
    <%= link_to 'Edit', edit_quote_path(@quote), class: 'px-6 py-3 bg-amber-600 hover:bg-amber-700 rounded-lg font-semibold transition duration-200 transform hover:scale-105 active:scale-95' %>
    <%= button_to 'Delete', quote_path(@quote), method: :delete, class: 'px-6 py-3 bg-red-600 hover:bg-red-700 rounded-lg font-semibold transition duration-200 transform hover:scale-105 active:scale-95 cursor-pointer border-0', onclick: "return confirm('Are you sure?');" %>
  </div>
</div>
